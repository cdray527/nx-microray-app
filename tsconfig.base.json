{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@design-system/*": ["libs/design-system/*"],
            "@design-system/components/*": ["libs/design-system/src/components/*"],
            "@design-system/stories/*": ["libs/design-system/src/stories/*"],
            "@design-system/styles/*": ["libs/design-system/src/styles/*"],
            "@product/*": ["apps/product/*"],
            "@product/components/*": ["apps/product/src/components/*"],
            "@store/*": ["apps/store/*"],
            "@store/components/*": ["apps/store/src/components/*"],
            "@checkout/*": ["apps/checkout/*"],
            "@checkout/components/*": ["apps/checkout/src/components/*"],
            "@utils/*": ["libs/utils/src/*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
